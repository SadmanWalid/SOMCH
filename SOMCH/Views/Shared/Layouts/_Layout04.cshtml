<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  SYLHET MAG OSMANI Medical College Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SOMCH.styles.css" asp-append-version="true" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


    <script src="https://kit.fontawesome.com/792919cac8.js" crossorigin="anonymous"></script>



    <!-- custom css -->
    <link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />
    <link rel="stylesheet" type="text/css" href="~/css/reg-patient-worklist.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Registration.css">




</head>

<body>
    <header class="navbar navbar-dark sticky-top  flex-md-nowrap p-0 " style="background-color: #fdfdfffd;">

        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 "
           style="background-color:  #fdfdfffd; color:rgb(68, 154, 229);" asp-controller="home" asp-action="dashboard">
            <i class="fa-solid fa-layer-group"></i> SOMCH
        </a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <span id="medName">
            <p>
                Sylhet M.A.G Osmani Medical College Hospital
            </p>
        </span>
        <span id="profile-name">
            <img id="notification" src="/images/header-notification-icon.png" alt="Notification" />

            <img id="profile-photo" src="/images/default-dp.png" alt="Profile Picture" />

            <p id="name">Name</p>
        </span>

    </header>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block  sidebar collapse">
                <a asp-controller="home" asp-action="dashboard">
                    <img src="/images/somc-logo.png" style="height: 100px;width:100px; margin-left:15%;" alt="brand-logo">
                </a>
                <div class="position-sticky pt-3">


                    <h7 style="margin-left: 5%;">Menu</h7>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="home" asp-action="dashboard">

                                <i class="fa-solid fa-house"></i>
                                Dashboard
                            </a>
                        </li>

                        <!-- accordion-sidebar -->
                        <li class="nav flex-column">
                            <div class="accordion  .accordion-flush" id="accordionExample">

                                <!-- registration accordion -->
                                <div class="accordion-item">
                                    <p class="accordion-header accordion-p" id="registration-accordion"
                                       data-bs-toggle="collapse" data-bs-target="#collapseRegistration"
                                       aria-expanded="false" aria-controls="collapseRegistration">
                                        <i class="fa-solid fa-border-all"></i> Registration <i class="fa-solid fa-caret-down"></i>
                                    </p>

                                    <div id="collapseRegistration" class="accordion-collapse collapse"
                                         aria-labelledby="registration-accordion" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <ul id="registration-list" class="nav flex-column">
                                                <li class="nav-item">
                                                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Registration" asp-action="Registration">
                                                        Patient Registration
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Registration" asp-action="RegisteredPatientList">
                                                        Registered Patient List
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active" aria-current="page" href="#">
                                                        Privileged Request Patient List
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                                <!-- opd accordian -->

                                <div class="accordion-item">


                                    <p class="accordion-header accordion-p" id="opd-accordion" data-bs-toggle="collapse"
                                       data-bs-target="#collapseOPD" aria-expanded="false" aria-controls="collapseOPD">
                                        <i class="fa-solid fa-cube"></i> OPD <i class="fa-solid fa-caret-down"></i>
                                    </p>


                                    <div id="collapseOPD" class="accordion-collapse collapse"
                                         aria-labelledby="opd-accordion" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                        </div>
                                    </div>


                                </div>

                                <!-- setup accordian -->

                                <div class="accordion-item">


                                    <p class="accordion-header accordion-p" id="setup-accordion"
                                       data-bs-toggle="collapse" data-bs-target="#collapseSetup" aria-expanded="false"
                                       aria-controls="collapseSetup">
                                        <i class="fa-solid fa-briefcase"></i> Setup <i class="fa-solid fa-caret-down"></i>
                                    </p>


                                    <div id="collapseSetup" class="accordion-collapse collapse"
                                         aria-labelledby="setup-accordion" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" role="main" id="main">
                @RenderBody()
            </main>
        </div>
    </div>








    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>

    @RenderSection("scripts",false)
</body>



</html>
